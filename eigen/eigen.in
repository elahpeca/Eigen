#!/usr/bin/env python3

import os
import sys
import signal
import locale
import shutil
import gettext

is_local = "@local_build@" == "True"
pkgdatadir = "@PKGDATA_DIR@"
localedir = "@LOCALE_DIR@"

sys.dont_write_bytecode = True

signal.signal(signal.SIGINT, signal.SIG_DFL)
gettext.install("@APP_NAME@", localedir)

locale.bindtextdomain("@APP_NAME@", localedir)
locale.textdomain("@APP_NAME@")


if __name__ == "__main__":
    if is_local:
        # In the local use case, use example module from the sourcetree
        sys.path.insert(1, "@PYTHON@")

        # In the local use case the installed schemas go in <builddir>/share
        os.environ["XDG_DATA_DIRS"] = "@SCHEMAS_DIR@:" + os.environ.get(
            "XDG_DATA_DIRS", ""
        )

        shutil.copyfile(
            os.path.join("@BUILD_DIR@", "eigen", "constants.py"),
            os.path.join("@SOURCE_DIR@", "eigen", "constants.py"),
        )

    import gi

    gi.require_version("Gtk", "4.0")
    gi.require_version("Adw", "1")

    from gi.repository import Gio

    resource = Gio.Resource.load(os.path.join(pkgdatadir, "@APP_NAME@.gresource"))
    Gio.Resource._register(resource)

    from eigen import main

    sys.exit(main.main())
